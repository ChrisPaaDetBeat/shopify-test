{% assign settings = section.settings %}
{% assign heading = settings.heading %}
{% assign subheading = settings.subheading %}

{% comment %} Login form {% endcomment %}
{% assign label_email_text = settings.label_email_text %}
{% assign placeholder_email_text = settings.placeholder_email_text %}
{% assign label_password_text = settings.label_password_text %}
{% assign placeholder_password_text = settings.placeholder_password_text %}
{% assign submit_button_text = settings.submit_button_text %}

{% comment %} Recover password form {% endcomment %}
{% assign recover_password_link_text = settings.recover_password_link_text %}
{% assign recover_password_heading = settings.recover_password_heading %}
{% assign recover_password_text = settings.recover_password_text %}
{% assign recover_password_button_text = settings.recover_password_button_text %}

{% assign create_account_link_text = settings.create_account_link_text %}
{% assign create_account_link_url = routes.account_register_url %}

<section class="login section">
  <header class="account_header section-header">
    <h1 class="account_heading">{{ heading }}</h1>
    <p class="account_subheading">{{ subheading }}</p>
  </header>

  {% comment %} Form login {% endcomment %}
  <div class="container">

    {% form 'customer_login', class: 'loginForm' %}
      <div class="formGroup">
        <label class="label" for="customer[email]">{{ label_email_text }}</label>
        <input id="login-email" class="input" name="customer[email]" type="email" value="" placeholder="{{ placeholder_email_text }}" required>
      </div>

      <div class="formGroup">
        <div class="formLabels">
          <label class="label label-inline" for="customer[password]">{{ label_password_text }}</label>
        </div>
        <input id="login-password" class="input" name="customer[password]" type="password" value="" placeholder="{{ placeholder_password_text }}" required>
      </div>

      <button class="button button-block" type="submit">{{ submit_button_text }}</button>
    {% endform %}

    {% comment %} Toggle reset password form {% endcomment %}
    <div class="recoverPassword_linkContainer">
      <a class="recoverPassword_link link" id="showRecoverPasswordOverlay" href="#">{{ recover_password_link_text }}</a>
    </div>

    <hr>

    {% comment %} Create account {% endcomment %}
    <a class="button button-outline button-block" href="{{ create_account_link_url }}">{{ create_account_link_text }}</a>

  </div>
</section>

{% schema %}
  {
    "name": "Login",
    "settings": [
      {
        "type": "header",
        "content": "Header text"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Welcome Back"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "Sign into your account to check orders and more."
      },
      {
        "type": "header",
        "content": "Form"
      },
      {
        "type": "text",
        "id": "label_email_text",
        "label": "Label email",
        "default": "E-mail"
      },
      {
        "type": "text",
        "id": "placeholder_email_text",
        "label": "Placeholder email",
        "default": "your@email.com"
      },
      {
        "type": "text",
        "id": "label_password_text",
        "label": "Label password",
        "default": "Password"
      },
      {
        "type": "text",
        "id": "placeholder_password_text",
        "label": "Placeholder password",
        "default": "Enter password"
      },
      {
        "type": "text",
        "id": "submit_button_text",
        "label": "Sign in button",
        "default": "Sign In"
      },
      {
        "type": "header",
        "content": "Links Text"
      },
      {
        "type": "text",
        "id": "recover_password_link_text",
        "label": "Forgot Password",
        "default": "Forgot password?"
      },
      {
        "type": "text",
        "id": "create_account_link_text",
        "label": "Create account text",
        "default": "Create account"
      }
    ]
  }
{% endschema %}
