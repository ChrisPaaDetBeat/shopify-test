<section class="activateAccount section">
  <header class="section_header text-centered">
    <h1>{{ 'customer.activate_account.title' | t }}</h1>
    <p>{{ 'customer.activate_account.subtext' | t }}</p>
  </header>
  <div class="container">
    {% form 'activate_customer_password' %}

      {% assign form_errors = form.errors %}

      {% if form_errors %}
        <div class="formMessage form_message-error">{{ form_errors | default_errors }}</div>
      {% endif %}

      <label class="label" for="CustomerPassword" class="label--hidden">{{ 'customer.activate_account.password' | t }}</label>
      <input class="input" type="password" value="" name="customer[password]" id="CustomerPassword" placeholder="{{ 'customer.activate_account.password' | t }}">

      <label class="label" for="CustomerPasswordConfirmation" class="label--hidden">{{ 'customer.activate_account.password_confirm' | t }}</label>
      <input class="input" type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">

      <input type="submit" class="button" value="{{ 'customer.activate_account.submit' | t }}">
      <div><input class="link" type="submit" name="decline" value="{{ 'customer.activate_account.cancel' | t }}"></div>

    {% endform %}
  </div>
</div>

{% schema %}
  {
    "name": "Activate account",
    "settings": [
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "We are working on this page."
      }
    ]
  }
{% endschema %}
