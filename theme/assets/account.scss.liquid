$color-bg-primary-button: {{ settings.color_bg_primary_button }};
$color-text-primary-button: {{ settings.color_text_primary_button }};
$color-text_white_button: {{ settings.color_text_white_button }};

// Helpers
.input[type="email"], 
.input[type="tel"], 
.input[type="password"], 
.input[type="text"] {
  height: 40px;
}

// Account
.accountSection {
  display: flex;
  flex-flow: wrap row;
  max-width: 808px;
  margin: 0 auto;
  width: 100%;
  justify-content: space-between;
  padding: 0 20px;
  box-sizing: border-box;
}

.section {
  padding: 25px 0;
}

// Account header
.accountHeader {
  text-align: center;

  @media (min-width: 768px) {
    text-align: left;
  }
}

.accountHeader h1 {
  font-size: 2.4rem;
  line-height: 3rem;
  margin: 0 0 10px;
}

// Sections
.orderHistory,
.accountDetails,
.accountRecharge {
  width: 100%;
}

.section_header {
  border-bottom: 1px solid lightgrey;
  margin-bottom: 10px;
  padding-bottom: 10px;

  h5 {
    margin: 0;
  }

  span, img {
    vertical-align: middle;
  }

  img {
    height: 100%;
    max-height: 18px;
    width: auto;
    margin-right: 5px;
  }
}

// Order history
.orders {}

.ordersList {
  text-align: center;
}

.orderList_emptyText {
  padding: 20px 0;
  text-align: left;
}

.orders .button {
  margin: 50px 0 0;
  min-width: 100%;

  @media (min-width: 768px) {
    margin: 25px 0 0;
    min-width: 320px;
  }
}

.order {
  text-align: left;
  padding: 25px 0 0;

  @media (min-width: 768px) {
    padding: 25px 0;
  }
}
.order-hidden { 
  position: absolute; 
  overflow: hidden; 
  clip: rect(0 0 0 0); 
  height: 1px; 
  width: 1px; 
  margin: -1px;
  padding: 0;
  border: 0; 
}

.order_summary {
  display: flex;
  flex-flow: wrap row;
  align-items: center;
  justify-content: space-between;
  padding: 20px;
  background: #f8f8f8;
  margin-bottom: 20px;
  margin-left: -20px;
  margin-right: -20px;

  @media (min-width: 768px) {
    padding: 20px;
    margin-left: 0;
    margin-right: 0;
  }
}

.order_number {
  font-size: 1.6rem;
  font-weight: bold;
}

.order_link {
  color: inherit;
  text-decoration: underline;
  font-weight: bold;
}

.order_details {
  display: block;
  overflow-x: auto;
  overflow-y: hidden;
  white-space: nowrap;
  padding: 0;

  @media (min-width: 768px) {
    padding: 0 15px;
  }
}

.order_info {
  display: flex;
  flex-wrap: wrap;
  padding: 0;
  margin-bottom: 20px;

  @media (min-width: 768px) {
    padding: 0 20px;
  }
}

.order_infoColumn {
  max-width: 33.33333%;
  flex-basis: 33.33333%;
  font-size: 1.2rem;
  line-height: 1.5;

  @media (min-width: 768px) {
    max-width: 16.66667%;
    flex-basis: 16.66667%;
    font-size: 1.4rem;
  }
}

// Product card
.order .productCard {
  display: inline-block;
  max-width: calc(50% - 20px);
  margin: 5px;

  @media (min-width: 768px) {
    max-width: calc(20% - 20px);
  }
}

.order .productCard_details {
  margin: 10px 0 0;
}

.order .productCard_title {
  font-family: inherit;
  font-size: 1.1rem;
  line-height: 1.25;
  margin-bottom: 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

  @media (min-width: 768px) {
    font-size: 1.2rem;
  }
}

.order .productCard_pricing {
  font-size: 1.2rem;
  line-height: 1;
}

/* Addresses */
.addresses {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.address {
  max-width: 100%;
  width: 100%;
  // flex: none;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 4px;
  text-align: left;
  margin: 10px;
  padding: 20px;

  @media (min-width: 768px) {
    // flex: 1;
    max-width: calc(33% - 20px);
  }
}

.address-new {
  border: 1px dashed #ddd;
  display: flex;
  flex-flow: wrap column;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  cursor: pointer;
}

.address_plus {
  background-color: $color-bg-primary-button;
  width: 35px;
  height: 35px;
  border-radius: 50%;
  color: $color-text-primary-button;
  line-height: 35px;
  text-align: center;
  font-size: 2rem;
  font-weight: normal;
  margin-bottom: 10px;
}

.address_name {
  font-size: 1.6rem;
  line-height: 1;
  font-weight: bold;
  margin-bottom: 20px;
}

.address_street {
  line-height: 1.5;
  margin-bottom: 20px;
}

.address_default {
  display: flex; 
  align-items: center;
  min-height: 17px;
  color: grey;
  margin-bottom: 20px;
}

.address_defaultIcon {
  margin-right: 5px;
}

.address_actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
